<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bills_item_bg"
    android:padding="10dp"
    android:layout_margin="6dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/titleBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/iconBill"
        app:layout_constraintStart_toStartOf="@+id/iconBill"
        app:layout_constraintTop_toBottomOf="@+id/iconBill" />

    <ImageView
        android:id="@+id/iconBill"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>